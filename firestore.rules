rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection - users can read/write their own data, read others for leaderboard
    match /users/{userId} {
      allow read: if true; // Allow reading for leaderboard
      allow write: if request.auth != null && request.auth.uid == userId;
      
      // User's analyses subcollection
      match /analyses/{analysisId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // Invites collection - scouts can create, players can read/update their invites
    match /invites/{inviteId} {
      allow read: if request.auth != null && 
        (request.auth.uid == resource.data.fromScoutId || 
         request.auth.uid == resource.data.toPlayerId);
      allow create: if request.auth != null && 
        request.auth.uid == request.resource.data.fromScoutId;
      allow update: if request.auth != null && 
        (request.auth.uid == resource.data.fromScoutId || 
         request.auth.uid == resource.data.toPlayerId);
      
      // Messages subcollection under invites
      match /messages/{messageId} {
        allow read, create: if request.auth != null && 
          (request.auth.uid == get(/databases/$(database)/documents/invites/$(inviteId)).data.fromScoutId ||
           request.auth.uid == get(/databases/$(database)/documents/invites/$(inviteId)).data.toPlayerId);
      }
    }
  }
}
